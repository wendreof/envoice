<p id="notice"><%= notice %></p>

<h1>Envoices</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @envoices.each do |envoice| %>
      <tr>
        <td><%= envoice.customer %></td>
        <td><%= link_to 'Show', envoice %></td>
        <td><%= link_to 'Edit', edit_envoice_path(envoice) %></td>
        <td><%= link_to 'Destroy', envoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova nota', new_envoice_path, class: 'waves-effect waves-light btn' %>
